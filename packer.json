{
    "variables": {
        "vagrant_home": "{{env `HOME`}}/.vagrant.d",
        "base_box_version": "{{env `BASE_BOX_VERSION`}}",
        "ansible_major_minor": "{{env `ANSIBLE_MAJOR_MINOR`}}",
        "ansible_patch": "{{env `ANSIBLE_PATCH`}}",
        "image_revision": "{{env `BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "virtualbox-ovf",
            "headless": true,
            "source_path": "{{ user `vagrant_home` }}/boxes/jumperfly-VAGRANTSLASH-centos-7/{{ user `base_box_version` }}/virtualbox/box.ovf",
            "http_directory": ".",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "shutdown_command": "poweroff",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "2048",
                    "--cpus",
                    "4"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "curl https://bootstrap.pypa.io/get-pip.py -o /tmp/get-pip.py",
                "python /tmp/get-pip.py",
                "rm -f /tmp/get-pip.py",
                "pip install ansible=={{ user `ansible_major_minor` }}.{{user `ansible_patch`}}",
                "dd if=/dev/zero of=/boot/ZERO bs=1M || echo Ignoring expected error",
                "rm /boot/ZERO",
                "dd if=/dev/zero of=/ZERO bs=1M || echo Ignoring expected error",
                "rm /ZERO",
                "sync"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "output": "output-virtualbox-ovf/ansible-{{.Provider}}.box",
                "keep_input_artifact": true
            },
            {
                "type": "vagrant-cloud",
                "box_tag": "jumperfly/ansible-{{ user `ansible_major_minor` }}",
                "version": "{{user `ansible_patch`}}.{{user `image_revision`}}"
            }
        ]
    ]
}