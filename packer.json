{
    "variables": {
        "ansible_version": "2.9.11",
        "build_number": "{{env `BUILD_NUMBER`}}",
        "box_version": "29.11.{{user `build_number`}}"
    },
    "builders": [
        {
            "type": "vagrant",
            "provider": "virtualbox",
            "source_path": "jumperfly/centos-7",
            "box_version": "7.9.16",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_password": "vagrant"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "ansible.repo",
            "destination": "/etc/yum.repos.d/ansible.repo"
        },
        {
            "type": "shell",
            "script": "ansible.sh",
            "environment_vars": [
                "PACKER_SKIP_SHRINK_DISK={{user `skip_shrink`}}",
                "ANSIBLE_VERSION={{user `ansible_version`}}"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant-cloud",
                "box_tag": "jumperfly/ansible",
                "version": "{{user `box_version`}}"
            }
        ]
    ]
}
