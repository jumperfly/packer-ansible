{
    "variables": {
        "ansible_version": "2.9.11",
        "box_version": "29.11.{{env `BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "vagrant",
            "provider": "virtualbox",
            "source_path": "jumperfly/centos-7",
            "box_version": "7.8.1",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_password": "vagrant"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "ansible.repo",
            "destination": "/etc/yum.repos.d/ansible.repo"
        },
        {
            "type": "shell",
            "inline": [
                "yum -y install ansible-{{ user `ansible_version` }}",
                "curl https://raw.githubusercontent.com/hashicorp/vagrant/v2.2.4/keys/vagrant -o /home/vagrant/.ssh/id_rsa",
                "chown vagrant:vagrant /home/vagrant/.ssh/id_rsa",
                "chmod 600 /home/vagrant/.ssh/id_rsa",
                "dd if=/dev/zero of=/boot/ZERO bs=1M || echo Ignoring expected error",
                "rm /boot/ZERO",
                "dd if=/dev/zero of=/ZERO bs=1M || echo Ignoring expected error",
                "rm /ZERO",
                "sync"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant-cloud",
                "box_tag": "jumperfly/ansible",
                "version": "{{user `box_version`}}"
            }
        ]
    ]
}
