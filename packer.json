{
    "variables": {
        "ansible_major_minor": "{{env `ANSIBLE_MAJOR_MINOR`}}",
        "ansible_patch": "{{env `ANSIBLE_PATCH`}}",
        "image_revision": "{{env `BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "vagrant",
            "source_path": "jumperfly/centos-7",
            "box_version": "7.8.1",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_password": "vagrant"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "curl https://bootstrap.pypa.io/get-pip.py -o /tmp/get-pip.py",
                "python /tmp/get-pip.py",
                "rm -f /tmp/get-pip.py",
                "pip install ansible=={{ user `ansible_major_minor` }}.{{user `ansible_patch`}}",
                "curl https://raw.githubusercontent.com/hashicorp/vagrant/v2.2.4/keys/vagrant -o /home/vagrant/.ssh/id_rsa",
                "chown vagrant:vagrant /home/vagrant/.ssh/id_rsa",
                "chmod 600 /home/vagrant/.ssh/id_rsa",
                "dd if=/dev/zero of=/boot/ZERO bs=1M || echo Ignoring expected error",
                "rm /boot/ZERO",
                "dd if=/dev/zero of=/ZERO bs=1M || echo Ignoring expected error",
                "rm /ZERO",
                "sync"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant-cloud",
                "box_tag": "jumperfly/ansible-{{ user `ansible_major_minor` }}",
                "version": "{{user `ansible_patch`}}.{{user `image_revision`}}"
            }
        ]
    ]
}
